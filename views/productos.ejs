<!DOCTYPE html>
<html lang="en">
    <%- include('templates/head') %>
<body>
    <a href="/"> Cargar Productos</a>
    <h1>Productos registrados:</h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#ID</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Miniatura</th>
          </tr>
        </thead>
        <tbody>
            <% products.map((prod)=>{ %>
                <tr>
                    <th scope="row"><%= prod.id %></th>
                    <td><%= prod.title %></td>
                    <td>$ <%= prod.price %></td>
                    <td><%= prod.thumbnail %></td>
                  </tr>
            <% }) %>
        </tbody>
      </table>
</body>
</html>