<div>
  <h1>Productos registrados:</h1>
  <hr />
  <form class="form-inline my-2 my-lg-0 d-flex flex-row">
    <input
      class="form-control mr-sm-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
    />
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
      Search
    </button>
  </form>

  <% if(products.length){ %>
  <form action="/cart/addProduct" method="post">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#ID</th>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Miniatura</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody id="tbody">
        <% products.map((prod)=>{ %>
        <tr>
          <th scope="row" id="prodId"><%= prod.sku %></th>
          <td><%= prod.description %></td>
          <td>$ <%= prod.price %></td>
          <td>
            <img src="<%= prod.thumbnail %>" alt="" height="50" width="50" />
          </td>
          <td>
            <button class="btn" type="submit" value="<%= prod.sku %>" name="prodId">
              <img
                src="https://cdn4.iconfinder.com/data/icons/eon-ecommerce-i-1/32/add_plus_cart_buy-256.png"
                alt=""
                height="20"
                width="20"
              />
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </form>
  <% }else { %>
  <hr />

  <h3>No hay productos para mostrar.</h3>
  <% } %>
</div>
